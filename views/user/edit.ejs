<%- include ../layouts/header %>

<% if(messages.error){ %>
	<p style="color: red;"><%- messages.error %></p>
<% } %>

<% if(messages.success){ %>
	<p style="color: green;"><%- messages.success %></p>
<% } %>

<form action="/users/edit/<%= id %>" method="post" name="formuser">
	<table>		
		<tr>
			<td>Username</td>
			<td><input type="text" autocomplete="off" name="username" value="<%= username %>"></td>
		</tr>
		<tr>
			<td>Password</td>
			<td><input type="text" autocomplete="off" name="password" value="<%= password %>"></td>
		</tr>
		<tr>
			<td>Hak Akses</td>
			<td><input type="text" autocomplete="off" name="hak_akses" value="<%= hak_akses %>"></td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td><input type="submit" name="Submit" value="Edit"></td>
		</tr>						
	</table>
	<input type="hidden" name="_method" value="PUT">
</form>

<%- include ../layouts/footer %>